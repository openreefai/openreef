{
  "reef": "1.0",
  "type": "shoal",
  "name": "formation-template",
  "version": "0.1.0",
  "description": "Starter formation template â€” customize for your use case",
  "author": "OpenReef",
  "license": "MIT",
  "namespace": "my-formation",
  "variables": {
    "ANTHROPIC_API_KEY": {
      "type": "string",
      "description": "Anthropic API key for LLM calls",
      "required": true,
      "sensitive": true
    },
    "MISSION_GOAL": {
      "type": "string",
      "description": "Primary mission for the agent team",
      "default": "Research",
      "required": false,
      "sensitive": false
    }
  },
  "agents": {
    "manager": {
      "source": "agents/manager",
      "description": "Coordinates the team, delegates tasks, and synthesizes results",
      "role": "coordinator",
      "model": "anthropic/claude-opus-4-6",
      "tools": {
        "allow": ["web-search", "file-read"]
      },
      "sandbox": {
        "network": true,
        "filesystem": "restricted"
      }
    },
    "researcher": {
      "source": "agents/researcher",
      "description": "Conducts deep research on assigned topics and reports findings",
      "role": "researcher",
      "model": "anthropic/claude-sonnet-4-5",
      "tools": {
        "allow": ["web-search"]
      },
      "sandbox": {
        "network": true,
        "filesystem": "restricted"
      }
    }
  },
  "agentToAgent": {
    "manager": ["researcher"],
    "researcher": ["manager"]
  },
  "cron": [
    {
      "schedule": "0 9 * * 1-5",
      "agent": "manager",
      "prompt": "Review progress on the current mission and plan today's priorities.",
      "timezone": "UTC"
    }
  ],
  "dependencies": {
    "skills": {
      "web-search": "^1.0.0",
      "file-read": "^1.0.0"
    },
    "services": [
      {
        "name": "Anthropic API",
        "url": "https://console.anthropic.com",
        "required": true,
        "description": "LLM provider for all agents"
      }
    ]
  },
  "validation": {
    "agent_exists": true,
    "file_exists": true,
    "binding_active": true,
    "cron_exists": true,
    "agent_responds": {
      "enabled": false,
      "timeout": 30
    }
  }
}
